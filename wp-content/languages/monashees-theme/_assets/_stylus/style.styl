cor1 = #209552

@import "../_libs/_bootstrap/css/bootstrap.styl"
@import "helpers"
@import "pace"
@import "fonts"
@import "animate"
@import "../_icons/ionicons/css/ionicons.styl"

/******************************************************************
* RESET
******************************************************************/

*
*:active
*:hover
	outline none !important


@media (min-width: 1025px) and (max-width: 3000px)
	.hide-desktop
		display none

@media (min-width: 769px) and (max-width: 1024px)
	.hide-tablet
		display none

@media (max-width: 768px)
	.hide-mobile
		display none


a:focus
a:hover
a:active
	text-decoration none



h1
h2
h3
h4
h5
h6
	margin 0 0
	padding 0 0

a
button
input[type=submit]
	transition(all .3s ease-in-out)


.pace-running
	.videos
		opacity 0
		transition(all .5s ease-in-out)
	.site
		opacity 0
		transition(all .5s ease-in-out)
.pace-done
	.videos
		opacity 1
		transition(all .5s ease-in-out)
	.site
		opacity 1
		transition(all .5s ease-in-out)
	
body
html
.monashees-full
#empresas-portfolio
	width 100%
	height 100%	



.no-overflow
	overflow hidden !important
	height: 100%;


.ajax-load
	width 85px
	height 85px
	background url('_assets/_imgs/ajax-load.svg?v=1');
	position absolute
	top 50%
	left 50%
	margin-left - 42.5px
	margin-top - 42.5px
	z-index 50

body
	background bgcor
	color fontcor
	font-size 14px
	overflow-x hidden
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	font-family "AntennaLight"
	background #202020
	
.no-results
	position fixed
	top 50%
	margin-top - 30px
	left 50%
	margin-left - 150px
	width 400px
	color #000
	font-size 18px
	text-align center
	background #FFF
	padding 20px
	radius(50px)
	z-index 1000

@media (max-width: 800px)
	.no-results
		width 100%
		margin-left -50%
		top 60%
		font-size 14px




@import '_parts/*'


.section-content
	padding-top 100px

.monashees
	position relative
	z-index 500

