.page-equipe
	padding 200px 0
	overflow hidden
	.page-title
		text-align center
		padding-bottom 60px
		h2
			color #FFF
			text-transform uppercase
			font-size 60px
			font-family "AntennaThin"
			margin-bottom 35px
		p
			font-size 22px
			color #9F9F9F
			line-height 40px
			

.lista-pessoas
	overflow hidden
	clear both
	.item
		width 25%
		padding 0 0.5px
		background-color #000
		display inline-block
		position relative
		overflow hidden
		cursor pointer
		-webkit-background-size cover
		-moz-background-size cover
		-o-background-size cover
		background-size cover
		background-position top right
		float left
		.foto
			img
				width 100%
				filter: gray;
				-webkit-filter: grayscale(1);
		.nome
			font-size 40px
			color #FFF
			position absolute
			bottom 45px
			left -100%
			width 110%
			z-index 20
			padding 0 25px
			transition(all .4s ease-in-out)
		.cargo
			font-size 20px
			color #FFF
			position absolute
			bottom -50px
			width 100%
			transition(all .6s ease-in-out)
			z-index 20
			padding 0 25px
	.item:hover
		.foto
			img
				filter: none;
				-webkit-filter: none
		.cargo
			bottom 25px
		.nome
			bottom 45px
			left 0
	.item:after
		content ""
		width 100%
		height 100%
		background rgba(0,0,0,0.5)
		left 0
		top 0
		opacity 0
		z-index 10
		position absolute
		transition(all .3s ease-in-out)
	.item:before
		content ""
		width 100%
		height 150px
		bgGradiente(rgba(0,0,0,0), #111)
		left 0
		bottom 0
		position absolute
		z-index 20
	.item:hover:after
		opacity 1



@media (max-width: 1300px)
	.page-equipe
		.lista-pessoas
			.item
				width 33.3333333%
				.nome
					font-size 16px
				.cargo
					font-size 14px

@media (max-width: 768px)
	.page-equipe
		padding 140px 0
		.page-title
			padding 0 30px 50px 30px
			h2
				font-size 35px
			p
				font-size 14px
				line-height 16px
		.lista-pessoas
			.item
				width 50%
				.nome
					font-size 16px
				.cargo
					font-size 14px

