.section-final
	height 100%
	width 100%
	display flex
	align-items center
	justify-content center
	background url('_assets/_imgs/triangulo-white-final.png') center center no-repeat
	position relative
	
	.texto-1
		h2
			font-size  55px
			font-family "AntennaThin"
			color #000
			line-height 65px
			transition(color .2s ease-in-out)
	.texto-2
		padding-top 80px
		position relative
		z-index 2
		p
			font-size 22px
			line-height 30px
			margin-bottom 30px
		p
			strong
				font-size 23px
				font-family "AntennaLight"
			
.logo-people-home
	background url('_assets/_imgs/bg-rodape.png') right top no-repeat
	height 250px
	width 100%
	position relative
	z-index 1000
	.people
		position absolute
		bottom 30px
		right 30px

.section-conteudo
	position relative

		

@media (max-height: 768px)
	.section-final
		.texto-1
			h2
				font-size  45px
				line-height 50px
		.texto-2
			padding-top 40px
			p
				font-size 18px
				line-height 25px
				margin-bottom 20px
			p
				strong
					font-size 24px
					font-family "AntennaLight"