.grid-empresas.on
	display block
	
#lista-itens-empresas
.itens
	min-height 100%
.grid-empresas
	width 100%
	height 100%
	overflow-y scroll
	overflow-x hidden
	background #000
	position fixed
	top 0
	display none
	left 0
	z-index 700
	padding-top 50px
	button
		width 50px
		height 30px
		position absolute
		top 10px
		right 10px
		background transparent
		border 0
		span
			font-size 20px
			color #666
	.item:first-child
		background transparent !important
	.item
		width 25%
		height 400px
		padding 15px 40px
		background-color #FFF
		background-repeat no-repeat
		background-position center center
		overflow hidden
		border 1px #010101 solid
		text-align center
		position relative
		cursor pointer
		img
			display inline-block
		.empresa-imagem
			background #302C2B
			width 100%
			height 100%
			position absolute
			top 0
			opacity 1
			left 0
			transition(all .2s ease-in-out)
	.item:hover
		.empresa-imagem
			opacity 0


.busca-empresas
	background #010101
	padding 40px 40px 40px 40px
	text-align left
	position absolute
	width 25%
	top 0
	z-index 10
	left 0
	h2
		color #FFF
		font-size 50px
		text-transform uppercase
		font-family "AntennaThin"
		margin-bottom 40px
	.box-busca.on
		label
			.ico
				left 90%
		input
			padding-left 10px
	.box-busca
		position relative
		margin-bottom 20px
		width 250px
		label
			.ico
				position absolute
				top 0
				left 0
				width 40px
				height 50px
				border 0
				text-align center
				transition(all .2s ease-in-out)
				span
					font-size 35px
					color #0A9FB1
			.ico2
				position absolute
				top 0
				left 90%
				width 40px
				height 50px
				display none
				border 0
				text-align center
				span
					font-size 35px
					color #0A9FB1
		input
			width 100%
			height 50px
			padding-left 40px
			background transparent
			border 0
			font-size 16px
			text-transform uppercase
			color #FFF
			transition(all .2s ease-in-out)
	.box-filtros
		label
			display block
			margin-bottom 10px
			position relative
			width 250px
			.ico
				position absolute
				top 0
				right 0
				width 30px
				height 45px
				line-height 45px
				z-index 1
				span
					color #FFF
					font-size 18px
		select
			width 100%
			height 45px
			border 1px #666 solid
			-webkit-appearance: none
			-moz-appearance: none
			appearance: none
			background transparent
			color #FFF
			z-index 2
			position relative
			padding 0 20px
			font-size 12px
			text-transform uppercase
			font-family "AntennaBold"


@media (max-width: 1300px)
	.grid-empresas
		.item
			width 33.3333333%


@media (max-width: 1024px)
	.grid-empresas
		.item
			width 50%
			

@media (max-width: 980px)
	.busca-empresas
		text-align center
		padding 20px 40px
		width 100%
		margin-top 50px
		h2
			font-size 40px
		.box-busca
			width 100%
			label
				width 100%
		.box-filtros
			width 100%
			label
				width 100%
	.grid-empresas
		.item:first-child
			height 320px
		.item
			width 100%
	