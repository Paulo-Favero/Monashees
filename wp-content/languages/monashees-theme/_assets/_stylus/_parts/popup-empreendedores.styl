.modal-content-empreendedor
	background #171A21

.apresentacao
	padding 50px
	background #171A21
	.texto
		color #fafafa
		padding-top 10px
		h4
			color #F4F2F3
			text-transform uppercase
			margin-bottom 15px
			font-size 15px
			font-family "AntennaBold"
		p
			line-height 26px
			font-size 16px


@media (max-width: 768px)
	.apresentacao
		padding 30px 25px





.texto-sobre
	padding 50px
	background #F4F2F3
	h4
		color #DB5B38
		text-transform uppercase
		font-size 16px
		margin-bottom 20px
	p
		color #F4F2F3 - 100
		line-height 25px
	.links-apps
		ul
			list-style none
			padding 0
			margin 0
			li
				display inline-block
				margin-right 15px
				a
					color #010101
					display table
					.ico-loja
						display table-cell
						vertical-align middle
						span
							font-size 40px
					.texto-loja
						display table-cell
						vertical-align middle
						padding-left 10px
						

	.link-site
		a
			color #010101
		a:hover
			color #DB5B38
			

@media (max-width: 768px)
	.texto-sobre
		padding 30px 25px


.na-midia
	padding 50px
	background #FFF
	clear both
	overflow hidden
	h4
		text-transform uppercase
		margin-bottom 20px
		font-size 20px
	.materias
		.item
			display table
			width 100%
			margin-bottom 20px
			.capa
				display table-cell
				vertical-align middle
				width 150px
				border 1px #010101 solid
			.texto
				display table-cell
				vertical-align middle
				padding-left 15px
				h5
					font-size 18px
					margin-bottom 15px
				a
					text-transform uppercase
					color #F36B41
					font-size 12px
					font-family "AntennaBold"
					

@media (max-width: 768px)
	.na-midia
		padding 30px 25px
		.materias
			.item
				.capa
					width 100px
				.texto
					h5
						font-size 16px
					p
						font-size 12px

.empresa-localizacao
	padding 50px
	background #171A21
	color #FFF
	position relative
	h4
		margin-bottom 10px
		text-transform uppercase
	ul
		list-style none
		padding 0
		margin 0
		li
			display inline-block
			font-family "AntennaBold"
			padding-right 5px
			span
				border 1px #FFF solid
				radius(5px)
				display inline-block
				padding 5px
	.carreiras
		width 374px
		height 245px
		background url('_assets/_imgs/triangulo-popup.png')
		position absolute
		bottom 0
		right 0
		a
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			z-index 10
		.ico
			width 45px
			height 49px
			background url('_assets/_imgs/ico-carreiras.png')
			position absolute
			top 100px
			right 60px
		.carreira-texto
			color #FFF
			position absolute
			bottom 40px
			right 60px
			text-transform uppercase
			font-family "AntennaBold"
			font-size 12px
			
@media (max-width: 768px)
	.empresa-localizacao
		padding 50px 15px 200px 15px
