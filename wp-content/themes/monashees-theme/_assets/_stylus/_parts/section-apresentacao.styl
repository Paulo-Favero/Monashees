.section-apresentacao-2
	height 890px
.section-apresentacao
	height 900px
	position fixed
	top 0
	left 0
	width 100%
	padding-top 120px
	.texto-1
		color #FFF
		position relative
		z-index 10
		h2
			font-size  55px
			font-family "AntennaThin"
			line-height 65px
	.texto-2
		padding-top 20px
		color #FFF
		position relative
		z-index 10
		p
			color #FFF
			font-size 21px
			line-height 35px
			strong
				font-family "AntennaThin" !important
				font-size 25px
				opacity 0.7

.section-apresentacao:after
	content ""
	width 100%
	height 130%
	position absolute
	top 0
	left 0
	background rgba(0,0,0,0.6)
	

.go-arrow
	width 100px
	height 200px
	position absolute
	left 50%
	top 360px
	margin-left -50px
	background #FFF
	radius(50px)
	z-index 10
	a
		width 100px
		height 80px
		background url('_assets/_imgs/arrow.png') center center no-repeat
		display inline-block
		position absolute
		top 0
		
