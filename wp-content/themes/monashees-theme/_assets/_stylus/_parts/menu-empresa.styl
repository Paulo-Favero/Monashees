.menu-empresas
	position fixed
	top 30%
	right 30px
	z-index 650
	width 18px
	padding-bottom 30px
	display none
	ul
		list-style none
		padding 0
		margin 0
		li
			a
				display inline-block
				width 18px
				height 18px
				border 1px #94949d solid
				radius(50%)
				margin-bottom 15px
			a:hover
				background #94949d - 30 
		li.current
			a
				background #94949d
				

	button
		width 40px
		height 40px
		background transparent
		border 0
		position absolute
		bottom 0
		left - 8px
		overflow hidden
		span
			display inline-block
			width 10px
			height 10px
			margin 1px
			float left
			border 1px #94949d solid
