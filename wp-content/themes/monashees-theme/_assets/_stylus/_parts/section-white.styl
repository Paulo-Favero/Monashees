@media (max-height: 768px)
	.topo-design-white
	.bottom-design-white
	.topo-design-black
	.bottom-design-black
		height 616px

	.section-white
		.box-textos
			.depoimento
				p
					font-size 20px
					line-height 30px
					strong
					span
						font-size 12px
						line-height 20px
					span
						font-size 14px
			.texto-complementar
				padding-top 10px



